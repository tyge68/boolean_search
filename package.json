{
  "name": "boolean-search",
  "displayName": "Boolean Search",
  "description": "Search files with boolean operators (AND, OR, NOT)",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:boolean-search.search",
    "onView:booleanSearchView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "boolean-search-sidebar",
          "title": "Boolean Search",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "boolean-search-sidebar": [
        {
          "type": "webview",
          "id": "booleanSearchView",
          "name": "Search Panel"
        }
      ]
    },
    "commands": [
      {
        "command": "boolean-search.search",
        "title": "Boolean Search: Search with Boolean Operators"
      },
      {
        "command": "boolean-search.openSidebar",
        "title": "Boolean Search: Open Sidebar",
        "icon": "$(search)"
      }
    ],
    "keybindings": [
      {
        "command": "boolean-search.search",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}

